    <script>
        $('.click').on('click',function(){
            console.log($(this))
            $(this).each(function(){
                $(this).addClass('fontclick').siblings().removeClass('fontclick')
                var index = $(this).index()
                $('.box').eq(index).removeClass('hide').siblings().addClass('hide')
            })
        })
        var index = 0
        var isDataArrive = false
        




        function getData(url,callback,q){
            $('.loading').removeClass('hide')
            q = $('#search').val()
            $.ajax({
                url:url,
                type:'GET',
                data:{
                    start:index,
                    count:10,
                    q:q
                    
                },
                dataType:'jsonp'
            }).done(function(ret){
                console.log(ret)
                console.log(q)
                index +=10
                callback(ret.subjects)
                isDataArrive=true
                $('.loading').addClass('hide')
            }).fail(function(){
                console.log('error...')
            })
           
        }
        function start(url,boxnumber){
            getData(url,function(subjects){
                subjects.forEach(function(arr,index){
                    var actor=[]
                    for(i=0;i<arr.casts.length;i++){
                        actor[i]=arr.casts[i].name
                    }
                    $('.box').eq(boxnumber).append(
                        '<div class="subject">'
                            +'<img src='+arr.images.medium+' alt="">'
                            +'<div class="info">'
                                +'<div class="title">'+arr.title+'</div>'
                                +'<div class="val"><span class="score">'+arr.rating.average+'</span>分/'+arr.collect_count+'收藏</div>'
                                +'<div class="type">'+arr.year+'/'+arr.genres.join('/')+'</div>'
                                +'<div class="dir">导演:'+arr.directors.name+'</div>'
                                +'<div class="actor">演员:'+actor.join('、')+'</div>'
                            +'</div>'
                        +'</div>'
                    )
                })
            })
            isDataArrive=false
        }   

        function start2(url){
            getData(url,function(subjects){
                subjects.forEach(function(arr,index){
                    var actor=[]
                    for(i=0;i<arr.subject.casts.length;i++){
                        actor[i]=arr.subject.casts[i].name
                    }
                    $('.box').eq('1').append(
                        '<div class="subject">'
                            +'<img src='+arr.subject.images.medium+' alt="">'
                            +'<div class="info">'
                                +'<div class="title">'+arr.subject.title+'</div>'
                                +'<div class="val"><span class="score">'+arr.subject.rating.average+'</span>分/'+arr.subject.collect_count+'收藏</div>'
                                +'<div class="type">'+arr.subject.year+'/'+arr.subject.genres.join('/')+'</div>'
                                +'<div class="dir">导演:'+arr.subject.directors.name+'</div>'
                                +'<div class="actor">演员:'+actor.join('、')+'</div>'
                            +'</div>'
                        +'</div>'
                    )
                })
            })
            isDataArrive=false
        }   
        function isVisble(index){
            return $(window).scrollTop()+$(window).height()>=$('.box').eq(index).height()
        }




        start('http://api.douban.com/v2/movie/top250',0)
        $(window).scroll(function(){
            if(!isDataArrive) return
            if(isVisble(0)){
                start('http://api.douban.com/v2/movie/top250',0)
                
            }
        })
        

        $('.click').eq('1').on('click',function(){
            start2('http://api.douban.com/v2/movie/us_box')
            $(window).scroll(function(){
            if(!isDataArrive) return
            if(isVisble(1)){
                start2('http://api.douban.com/v2/movie/us_box')
                
            }
        })
        })
        
        
        $('button').on('click',function(){
            
            start('http://api.douban.com/v2/movie/search',2)
            $(window).scroll(function(){
            if(!isDataArrive) return
            if(isVisble(2)){
            start('http://api.douban.com/v2/movie/search',2)
            
                }
            })
        })
            
        
        
       
    </script>
